<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkpointlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:columnOrderPreserved="false"
    android:rowCount="4"
    android:useDefaultMargins="true"
    tools:context="com.example.levon.ui.CheckpointActivity" >

    <FrameLayout
        android:id="@+id/image_overlay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="left"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_row="0" >

        <ImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/pic_whitecircle_400x400" />

        <ImageView
            android:id="@+id/scanning_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/result_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/fake_message"
        style="@style/textstylebold"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_row="1"
        android:text="@string/fake_message"
        android:visibility="gone" />

    <TableLayout
        android:id="@+id/ambulance_details_one"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_row="1"
        android:visibility="invisible" >

        <TableRow>

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:src="@drawable/gaia" />

            <TableLayout
                android:layout_width="120dp"
                android:layout_height="112dp"
                android:layout_gravity="center_vertical|right" >

                <TableRow>

                    <TextView
                        style="@style/textstyle"
                        android:text="@string/driver_name" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/driver_name"
                        style="@style/textstylebold"
                        android:layout_marginBottom="6dp"
                        android:gravity="left" />
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/textstyle"
                        android:text="@string/license_plate" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/license_plate"
                        style="@style/textstylebold"
                        android:gravity="left" />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/ambulance_details_two"
        android:layout_gravity="top"
        android:layout_marginLeft="40dp"
        android:layout_row="2"
        android:visibility="invisible" >

        <TableRow>

            <TextView
                style="@style/textstyle"
                android:text="@string/organization" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/organization"
                style="@style/textstylebold"
                android:layout_marginBottom="6dp"
                android:gravity="left" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/textstyle"
                android:text="@string/signed_by" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/signed_by"
                style="@style/textstylebold"
                android:gravity="left" />
        </TableRow>
    </TableLayout>

    <!--
    TableLayout
        android:layout_gravity="top"
        android:layout_row="3" >
                <TableRow>
            <ImageButton
                android:id="@+id/btn_back_ambulance"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="@string/btn_back"
                android:background="@null"
                android:src="@drawable/ic_action_back"
                android:width="60dip"
                android:layout_column="3"/>
                </TableRow>

    </TableLayout
    -->

    <TableLayout
        android:layout_marginLeft="40dp"
        android:layout_row="3" >

        <TableRow>

            <TextView
                android:id="@+id/checkpoint_log"
                style="@style/infotextstyle"
                android:layout_width="wrap_content"
                android:layout_marginTop="0dp"
                android:maxLines="2" />
        </TableRow>
    </TableLayout>

</GridLayout>