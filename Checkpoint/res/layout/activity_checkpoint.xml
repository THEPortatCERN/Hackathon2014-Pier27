                </TableRow>

    </TableLayout
    -->

    <TableLayout android:layout_row="3" >

        <TableRow>

            <TextView
                android:id="@+id/checkpoint_log"
                android:layout_width="wrap_content"
                android:layout_weight="2" />

        </TableRow>
    </TableLayout>

</GridLayout>