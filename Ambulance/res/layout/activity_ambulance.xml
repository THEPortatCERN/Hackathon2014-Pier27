<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="4"
    android:columnOrderPreserved="false"
    android:rowCount="6"
    android:useDefaultMargins="true" >
     <ImageView
      android:id="@+id/scanning_image"
        android:layout_width="202dp"
        android:layout_height="178dp"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="66dp"
        android:layout_height="88dp"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="2"
        android:src="@drawable/ic_launcher" />

    <TableLayout
        android:layout_width="218dp"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="top"
        android:layout_row="3"
        android:stretchColumns="2" >

        <!-- Row 3 with 2 column -->

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/license_plate" />

            <TextView
                android:id="@+id/license_plate"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <!-- Row 4 with 2 column -->

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/signed_by" />

            <TextView
                android:id="@+id/signed_by"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <!--
         hide them for now
        <CheckBox
            android:id="@+id/check_fake_ambulance_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/fake_message" />

        <CheckBox
            android:id="@+id/check_fake_ambulance_cert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/fake_certificate" />
        -->
    </TableLayout>
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/ambulance_log"
        android:layout_width="78dp"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal|fill_vertical"
        android:layout_row="5"
        android:maxLines="5" />

    <Button
        android:id="@+id/btn_back_ambulance"
        android:layout_width="30dp"
        android:layout_height="33dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="5" />

    <TableLayout
        android:layout_width="160dp"
        android:layout_height="112dp"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_row="2"
        android:stretchColumns="2" >

        <TableRow>
            <TextView
                android:id="@+id/driver_name"
                android:gravity="left"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/organization"
                android:gravity="left"
                android:padding="3dip"
                android:maxLines="5" />
        </TableRow>
    </TableLayout>

</GridLayout>