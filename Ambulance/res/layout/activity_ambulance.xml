<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="1"
    android:columnOrderPreserved="false"
    android:rowCount="4"
    android:useDefaultMargins="true"
    android:background="@color/background">
	<ImageView
	    android:id="@+id/scanning_image"
        android:layout_row="0"
        android:layout_width="202dp"
        android:layout_height="178dp"
        android:layout_gravity="center"/>

    <TableLayout
        android:layout_marginLeft="40dp"
        android:layout_row="1" >

        <TableRow>

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:src="@drawable/gaia" />

            <TableLayout
                android:layout_width="160dp"
                android:layout_height="112dp"
                android:layout_gravity="center_vertical|right" >

                <TableRow>
                    <TextView
                        android:id="@+id/driver_name"
                        android:gravity="left"
                        android:padding="3dip" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/organization"
                        android:gravity="left"
                        android:maxLines="5"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_gravity="top"
        android:layout_row="2" >

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/license_plate"
                 />

            <TextView
                android:id="@+id/license_plate"
                android:gravity="left"
                android:padding="3dip" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="@string/signed_by" />

            <TextView
                android:id="@+id/signed_by"
                android:gravity="left"
                android:padding="3dip" />
        </TableRow>
        <!--
         hide them for now
        <CheckBox
            android:id="@+id/check_fake_ambulance_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/fake_message" />

        <CheckBox
            android:id="@+id/check_fake_ambulance_cert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/fake_certificate" />
        -->
    </TableLayout>

    <TableLayout android:layout_row="2" >

        <TableRow>

            <TextView
                android:id="@+id/ambulance_log"
                android:layout_width="wrap_content"
                android:layout_weight="2" />

            <Button
                android:id="@+id/btn_back_ambulance"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="@string/btn_back"
                android:width="60dip" />
        </TableRow>
    </TableLayout>

</GridLayout>
