<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:background="@color/background"
    android:columnCount="1"
    android:columnOrderPreserved="false"
    android:rowCount="5"
    android:useDefaultMargins="true" >

    <ImageView
        android:id="@+id/scanning_image"
        android:layout_width="202dp"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:layout_row="0"/>
    <ImageView
        android:id="@+id/result_image"
        android:layout_width="202dp"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:layout_row="0"
        android:visibility="gone"/>

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_row="1" >

        <TableRow>
            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:src="@drawable/gaia" />

            <TableLayout
                android:layout_width="120dp"
                android:layout_height="112dp"
                android:layout_gravity="center_vertical|right" >

                <TableRow>

                    <TextView
                        style="@style/textstyle"
                        android:text="@string/driver_name" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/driver_name"
                        style="@style/textstylebold"
                        android:gravity="left" 
                        android:layout_marginBottom="6dp"/>
                    
                </TableRow>

                <TableRow>

                    <TextView
                        style="@style/textstyle"
                        android:text="@string/license_plate" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/license_plate"
                        style="@style/textstylebold"
                        android:gravity="left" />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_gravity="top"
        android:layout_row="2" >

        <TableRow>

            <TextView
                style="@style/textstyle"
                android:text="@string/organization" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/organization"
                style="@style/textstylebold"
                android:gravity="left"
                android:layout_marginBottom="6dp" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/textstyle"
                android:text="@string/signed_by" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/signed_by"
                style="@style/textstylebold"
                android:gravity="left" />
        </TableRow>
    </TableLayout>

    <!--
    TableLayout
        android:layout_gravity="top"
        android:layout_row="3" >
                <TableRow>
            <ImageButton
                android:id="@+id/btn_back_ambulance"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="@string/btn_back"
                android:background="@null"
                android:src="@drawable/ic_action_back"
                android:width="60dip"
                android:layout_column="3"/>
                </TableRow>

    </TableLayout
        
    -->
	<TableLayout
        android:layout_row="3"
        android:layout_gravity="top" >
        
		<TableRow>
            <CheckBox
                android:id="@+id/check_fake_ambulance_msg"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
              	android:checked="false"
                android:text="@string/fake"
                style="@style/infotextstyle"
                android:button="@drawable/customdrawable" />
		</TableRow>
		
		<TableRow>
            <TextView
                style="@style/infotextstyle"
                android:id="@+id/ambulance_log"
                android:layout_marginTop="0dp"
                android:maxLines="2"/>
         </TableRow>
               
     </TableLayout>  
            
			

</GridLayout>